<nav class="my-5" aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item <% if (!pagination.has_pre) { %>disabled<% } %>">
      <a class="page-link" href="/<%- url %>?page=<%- pagination.current_page - 1 %><% if (status) { %>&status=<%- status %><% } %>">Previous</a>
    </li>
    <%
    if (status === undefined) {
      var status = "";
    }
    %>
    <% for (i = 1; i < pagination.total_pages + 1; i++) { %>
      <li class="page-item <% if (pagination.current_page === i) { %>active<% } %>"> 
        <a class="page-link" href="/<%- url %>?page=<%- i %><% if (status) { %>&status=<%- status %><% } %>">
          <%- i %>
        </a>
      </li>
    <% } %>
    <li class="page-item <% if (!pagination.has_next) { %>disabled<% } %>">
      <a class="page-link" href="/<%- url %>?page=<%- pagination.current_page + 1 %><% if (status) { %>&status=<%- status %><% } %>">Next</a>
    </li>
  </ul>
</nav>